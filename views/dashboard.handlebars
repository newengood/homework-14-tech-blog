{{!-- dashboard template --}}

{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Created by {{post.user.username}} on {{format_date post.date_created}}</p>
  </div>
</div>
{{/each}}
<form class="form post-form">
    <h2>New Post:</h2>
    <div class="form-group">
        <label for="title">Title:</label>
        <input class="form-input" type="text" id="title" />
    </div>
    <div class="form-group">
        <label for="content">Content:</label>
        <input class="form-input" type="text" id="content" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">submit</button>
    </div>
</form>

<script src="../js/post.js"></script>