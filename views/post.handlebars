{{!-- post template for viewers --}}

<h2>{{post.title}}</h2>
  <p hidden id="post_id">{{post.id}}</p>
  <p>Created by {{post.user.username}} on {{format_date post.date_created}}</p>
  <p>{{post.content}}</p>

    <form class="form comment-form">
      <div class="form-group">
        <label for="add-comment">Add Comment:</label>
        <input class="form-input" type="text" id="add-comment" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">submit</button>
      </div>
    </form>
    {{#if post.comments}}
      <h2>Comments</h2>
      {{#each post.comments as |comment|}}
        <p>{{comment.content}}</p>
        <p>Commented on {{format_date comment.date_created}} by user {{comment.user_id}}</p>
      {{/each}}
    {{/if}}

<script src="../js/comment.js"></script>
